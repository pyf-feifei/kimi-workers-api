{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": [
      "ES2022"
    ],
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    // 新增JS项目专用配置
    "allowJs": true,
    "checkJs": true,
    "maxNodeModuleJsDepth": 2,
    // 移除TS相关配置
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.js",
    "src/**/*.d.js" // 包含类型声明文件
  ],
  "exclude": [
    "node_modules",
    "**/*.test.js"
  ]
}